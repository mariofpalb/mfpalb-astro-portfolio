---
import Layout from '../layouts/Layout.astro';
---

<Layout title="It's me! Mario! 🍄">
	<main>
		<h2>Hey! It's a me!</h2>
		<h1>
			<span class="mario-font text-super-mario-red">M</span>
			<span class="mario-font text-super-mario-green">A</span>
			<span class="mario-font text-super-mario-yellow">R</span>
			<span class="mario-font text-super-mario-blue">I</span>
			<span class="mario-font text-super-mario-green">O</span>
		</h1>
	</main>
</Layout>

<style>
	.mario-font {
		font-family: 'LemonMilkBold', sans-serif;
		-webkit-text-stroke-width: 8px;
  	-webkit-text-stroke-color: black;
		text-shadow: 0px 10px 5px rgba(0, 0, 0, 1);
		}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: hsl(0, 0%, 10%);
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 7rem;
		font-weight: 700;
	}
	h2 {
		font-size: 3rem;
		font-weight: 800;
	}
</style>
